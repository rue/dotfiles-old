	set modeline			" enable using settings from modelines in files
	set modelines=3			" number of lines to check for modelines
	set nobinary			" not binary file editing
	set endofline&			" last line in the file has an end-of-line (?)
	set nobomb			" don't prepend a Byte Order Mask to the file
	set fileformat&			" end-of-line format
	set fileformats&		" list of file formats to look for when editing
	set write			" writing files is allowed
