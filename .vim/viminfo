"4	CHAR	0
	15. Folding
	" -------------
	
	set foldenable			" set to display all folds open
	set foldlevel=0			" folds with a level higher than this: closed
	set foldlevelstart=-1		" value of 'foldlevel' when starting edit
	set foldcolumn=0		" width of the column used to indicate folds
	set foldtext=foldtext()		" expression used to display text of closed fo.
	set foldclose=			" set to "all" to close folds when cursor leavs
	set foldopen&			" specifies which commands open a fold
	set foldminlines=1		" minimum number of screen lines for fold close
	set commentstring&		" template for comments; used to put markers in
	set foldmethod&			" folding type
	set foldexpr=0			" expression used when 'foldmethod' is "expr"
	set foldignore&			" lines to ignore when 'foldmethod' is "indent"
	set foldmarker={{{,}}}		" markers used when 'foldmethod' is "marker"
	set foldnestmax=20		" maximum fold depth 'foldmethod' "indentsyn"
	
	" 1.16. Diff Mode
	" ---------------
	
	set nodiff			" don't use diff mode for the current window
	set diffopt=filler		" options for using diff mode
	set diffexpr=			" expression used to obtain a diff file
	set patchexpr=			" expression used to patch a file
	
	" 1.17. Mapping
