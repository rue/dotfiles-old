	set nobackup			" don't keep a backup after overwriting a file
	set backupskip&			" patterns that specify files to skip backups 4
	set backupcopy&			" whether to make the backup a copy or rename
	set backupdir=.,~/tmp		" list of directories to put backup files in
	set backupext&			" file name extension for the backup file
	set autowrite			" automatically write a file when leaving buf
	set autowriteall		" as 'autowrite', but works with more commands
	set nowriteany			" don't always write without asking for confrm.
	set noautoread			" don't autoread files that have changed (ask?)
	set patchmode&			" don't keeep oldest version of a file (exts)
	set noshortname			" don't use 8.3 file names (DOS)
	
	" 1.19. The Swap File
