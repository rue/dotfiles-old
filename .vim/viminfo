# Registers:
""1	CHAR	0
			" swap 'N' and 'K' keys
	noremap n k
	
"2	CHAR	0
					" do DVORAK keyboard layout
					" swap 'T' and 'J' keys
	
"3	CHAR	0
	
					" map C-Y in insert mode to making previous
					" word uppercase
	inoremap <silent> <C-Y> <Esc>gUiw`]a
	
	noremap <Leader>p :cprevious<CR>
	noremap <Leader>n :cnext<CR>
	
	" 6.2. Command Line
	" -----------------
	
					" some Emacs like bindings in the command-line
	cnoremap <C-A>	<Home>
	cnoremap <C-B>	<Left>
	cnoremap <C-D>	<Del>
	cnoremap <C-E>	<End>
	cnoremap <C-F>	<Right>
	cnoremap <C-N>	<Down>
	cnoremap <C-P>	<Up>
	cnoremap <A-B>	<S-Left>
	cnoremap <A-F>	<S-Right>
	cnoremap <C-G>	<C-c>
	
	" 6.3. Visual Mode
	" ----------------
					" Make "p" replace selected text with "" reg.
	vnoremap p <Esc>:let current_reg =  <at> "<CR>gvdi<C-R>=current_reg<CR><Esc>
	
	" 6.4. selectbuf
	" --------------
	
					" key used to display buffer browser
	nmap <silent> <Leader>b <Plug>SelectBuf
					" key used to select a buffer
	noremap <silent> <Plug>SelBufSelectKey e
					" key used to select a buffer and keep open
	noremap <silent> <Plug>SelBufWSelectKey <C-w>e 
					" key used to delete a buffer
	noremap <silent> <Plug>SelBufDeleteKey d
					" key used to wipe a buffer
	noremap <silent> <Plug>SelBufWipeOutKey D
					" key used to toggle buffer details
	noremap <silent> <Plug>SelBufTDetailsKey i
					" key used to toggle display of hidden buffers
	noremap <silent> <Plug>SelBufTHiddenKey u
					" key used to toggle directories
	noremap <silent> <Plug>SelBufTDirsKey p
					" key used to display paths
	noremap <silent> <Plug>SelBufTHidePathsKey P
					" key used to refresh display
	noremap <silent> <Plug>SelBufRefreshKey <C-r> 
					" key used to toggle sort order forward
	noremap <silent> <Plug>SelBufSortSelectFKey l
					" key used to toggle sort order backward
	noremap <silent> <Plug>SelBufSortSelectBKey L
					" key used to reverse sort order
	noremap <silent> <Plug>SelBufSortRevKey r
					" key used to close buffer browser
	noremap <silent> <Plug>SelBufQuitKey q
					" key used to toggle help display
	noremap <silent> <Plug>SelBufHelpKey ?
	
	" 6.4. Miscellaneous
	" ------------------
	
					" open our VIMRC file for editing
	map <Leader>e <Esc>:split ~/.vimrc<CR>
					" source our VIMRC so changes take effect
	map <Leader>u <Esc>:source ~/.vimrc<CR>
	
	" nnoremap i <Esc>:let g:insert_mode_type = 'i'<CR>i
	" inoremap <silent> <Esc> <Esc>:if exists('g:insert_mode_type') \| exe 'normal! l' \| unlet
	g:insert_mode_type \| endif<CR>
	noremap <silent> <Leader>h <Esc>:silent nohlsearch<CR>
	
	" 7. Automatic Commands
	" =====================
	
					" locally cd to the path of the current file
	autocmd BufEnter * if bufname("") !~ "^\[a-z\]*://" | silent! lcd %:p:h | endif
	
	" 8. Sourced Files
